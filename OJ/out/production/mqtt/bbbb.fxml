                   preserveRatio="true">
            <image>
                <Image url="@alg.png"/>
            </image>
        </ImageView>
        <ProgressIndicator layoutX="374.0" layoutY="454.0">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </ProgressIndicator>

    </children>
</AnchorPane>
