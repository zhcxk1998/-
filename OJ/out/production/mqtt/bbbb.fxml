            <font>
                <Font name="System Regular" size="18"/>
            </font>
        </Button>
        <Button fx:id="btn2" layoutX="450.0" layoutY="386.0" mnemonicParsing="false" onAction="#registAction"
                stylesheets="style.css" text="注册" textAlignment="CENTER" textFill="WHITE">
